            <ul class="list-inline social-buttons">
              <li class="list-inline-item">
                <a href="#page-bottom"><i class="fa fa-twitter"></i></a>
              </li>
              <li class="list-inline-item">
                <a href="#page-bottom"><i class="fa fa-facebook"></i></a>
              </li>
              <li class="list-inline-item">
                <a href="#page-bottom"><i class="fa fa-linkedin"></i></a>
              </li>
            </ul>
          </div>
          <div class="col-md-4">
            <ul class="list-inline quicklinks">
              <li>
                <span class="copyright">Medhn Developers Team, 2022</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </footer>
    <script src="/bootstrap/jquery.min.js"></script>
    <script src="/bootstrap/bootstrap.min.js"></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"
    ></script>

    <script src="/bootstrap/agency.js"></script>
  </body>
</html>